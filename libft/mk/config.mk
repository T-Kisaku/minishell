# -----------------------------------------------------------------------------
# Make commands settings
# -----------------------------------------------------------------------------
MAKEFLAGS += --silent --no-print-directory

# -----------------------------------------------------------------------------
# Compiler
# -----------------------------------------------------------------------------
CC       = cc
CFLAGS   = -Wall -Wextra -Werror -I.


# -----------------------------------------------------------------------------
# Commands
# -----------------------------------------------------------------------------

AR      = ar rcs
RM       = rm -f
MKDIR_P  = mkdir -p

# -----------------------------------------------------------------------------
# Colors
# -----------------------------------------------------------------------------
PURPLE   = \033[38;5;141m
GREEN    = \033[38;5;46m
RESET    = \033[0m
BOLD     = \033[1m
CLEAR    = \r\033[K
