# -----------------------------------------------------------------------------
# Make commands settings
# -----------------------------------------------------------------------------
MAKEFLAGS += --silent --no-print-directory

# -----------------------------------------------------------------------------
# Compiler
# -----------------------------------------------------------------------------
CC       = cc
INCLUDE_FLAGS = -Isrc -I$(LIBFTDIR) -lreadline
CFLAGS   = -Wall -Wextra -Werror $(INCLUDE_FLAGS)


# -----------------------------------------------------------------------------
# Commands
# -----------------------------------------------------------------------------
RM       = rm -f
MKDIR_P  = mkdir -p

# -----------------------------------------------------------------------------
# Colors
# -----------------------------------------------------------------------------
PURPLE   = \033[38;5;141m
GREEN    = \033[38;5;46m
RESET    = \033[0m
BOLD     = \033[1m
CLEAR    = \r\033[K
